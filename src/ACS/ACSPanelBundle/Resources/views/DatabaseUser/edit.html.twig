{% extends '::base.html.twig' %}
{% block page_title %} - {% trans %}dbuser.title.edit{% endtrans %}{% endblock %}
{% block body %}

<div class="form_box">
    <form action="{{ path('databaseuser_update', { 'id': entity.id }) }}" method="post" {{ form_enctype(edit_form) }}>
        <span class="label label-important">{{ form_errors(edit_form) }}</span>
        {{ form_widget(edit_form) }}
        <p>
        <button class="btn btn-success" type="submit">{% trans %}dbuser.button.edit{% endtrans %}</button>
        </p>
    </form>
</div>

<ul class="record_actions">
    <li>
        <a href="{{ path('db') }}">
            {% trans %}dbuser.button.back{% endtrans %}
        </a>
    </li>
    <li>
        <form action="{{ path('databaseuser_delete', { 'id': entity.id }) }}" method="post">
            {{ form_widget(delete_form) }}
            <button  class="btn btn-primary" type="submit">{% trans %}dbuser.button.delete{% endtrans %}</button>
        </form>
    </li>
</ul>
{% endblock %}
