{% extends '::base.html.twig' %}
{% block header_title %} - {% trans %}HttpdHost edit{% endtrans %}{% endblock %}
{% block body %}
{% include "::acspanel.forms.html.twig" %}

<div class="form_box">
    <form action="{{ path('httpdhost_update', { 'id': entity.id }) }}" method="post" {{ form_enctype(form) }}>
        <div class="form_box row-fluid">
            <div class="span6">
                <span class="label label-important">{{ form_errors(form) }}</span>
                {{ form_row(form.domain) }}
                {{ form_row(form.configuration) }}
                <div class="control-group"><div class="controls">{{ form_widget(form.cgi) }}{{ form_label(form.cgi, null, {'label_attr': {'class':'checkbox inline'}})}}</div></div>
                <div class="control-group"><div class="controls">{{ form_widget(form.ssi) }}{{ form_label(form.ssi, null, {'label_attr': {'class':'checkbox inline'}})}}</div></div>
                <div class="control-group"><div class="controls">{{ form_widget(form.php) }}{{ form_label(form.php, null, {'label_attr': {'class':'checkbox inline'}})}}</div></div>
                <div class="control-group"><div class="controls">{{ form_widget(form.add_www_alias) }}{{ form_label(form.add_www_alias, null, {'label_attr': {'class':'checkbox inline'}})}}</div></div>
                <div class="control-group"><div class="controls">{{ form_widget(form.add_dns_record) }}{{ form_label(form.add_dns_record, null, {'label_attr': {'class':'checkbox inline'}})}}</div></div>
                {{ form_row(form.service) }}
                {{ form_row(form.proxy_service) }}
            </div>
            <div class="span6">
                <div class="control-group"><div class="controls">{{ form_widget(form.ssl) }}{{ form_label(form.ssl, null, {'label_attr': {'class':'checkbox inline'}})}}</div></div>
                {{ form_row(form.certificate) }}
                {{ form_row(form.certificate_key) }}
                {{ form_row(form.certificate_chain) }}
                {{ form_row(form.certificate_authority) }}
                {{ form_rest(form) }}
            </div>
        </div>
        <div class="container">
            <p>
                <button class="btn" type="submit">{% trans %}httpdhost.button.update{% endtrans %}</button>
            </p>
        </div>
    </form>

</div>

<ul class="record_actions">
    <li>
        <a href="{{ path('httpdhost') }}">
            {% trans %}Back to the list{% endtrans %}
        </a>
    </li>
    <li>
        <form action="{{ path('httpdhost_delete', { 'id': entity.id }) }}" method="post">
            {{ form_widget(delete_form) }}
            <button class="btn btn-danger" type="submit" onclick="if(!confirm('{% trans %}Are you sure?{% endtrans %}')) { return false; }">{% trans %}Delete{% endtrans %}</button>
        </form>
    </li>
</ul>

{% endblock %}
