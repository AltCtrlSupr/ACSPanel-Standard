{% extends '::base.html.twig' %}
{% block header_title %} - {% trans %}db.title.edit{% endtrans %}{% endblock %}
{% block body %}

<div class="form_box">
    <form action="{{ path('db_create') }}" method="post" {{ form_enctype(edit_form) }}>

        <div class="general-section">
            {{form_row(edit_form.name)}}
            {{form_row(edit_form.description)}}
            {{form_row(edit_form.service)}}

            {% macro prototype(databaseuser) %}
                    {{form_widget(databaseuser.username)}}
                    {{form_widget(databaseuser.password)}}
                    <li><a href="#">{% trans %}db.button.remove{% endtrans %}</a></li>
            {% endmacro %}


        </div>

        <ul class="dinamic-adder" data-prototype="{{ form_widget(edit_form.database_users.vars.prototype) | e }}">
                {% for databaseuser in edit_form.database_users %}
                    <li>{{_self.prototype(databaseuser)}}</li>
                {% endfor %}
        </ul>

        <div class="admin-section">
            {{ form_rest(edit_form) }}
        </div>

        <p>
            <button type="submit">{% trans %}db.button.create{% endtrans %}</button>
        </p>
    </form>
</div>

<ul class="record_actions">
    <li>
        <a href="{{ path('db') }}">
            {% trans %}db.button.back{% endtrans %}
        </a>
    </li>
    <li>
        <form action="{{ path('db_delete', { 'id': entity.id }) }}" method="post">
            {{ form_widget(delete_form) }}
            <button class="btn" type="submit">{% trans %}db.button.delete{% endtrans %}</button>
        </form>
    </li>
</ul>

<script type="text/javascript">
    // Get the div that holds the collection of tags
    var collectionHolder = $('ul.dinamic-adder');

    // setup an "add a tag" link
    var $addTagLink = $('<a href="#" class="add_tag_link">{% trans %}db.button.adduser{% endtrans %}</a>');
    var $newLinkLi = $('<li></li>').append($addTagLink);

    jQuery(document).ready(function() {
        // add the "add a tag" anchor and li to the tags ul
        collectionHolder.append($newLinkLi);

        $addTagLink.on('click', function(e) {
            // prevent the link from creating a "#" on the URL
            e.preventDefault();

            // add a new tag form (see next code block)
            addTagForm(collectionHolder, $newLinkLi);
        });
    });

    function addTagForm(collectionHolder, $newLinkLi) {
        // Get the data-prototype explained earlier
        var prototype = collectionHolder.attr('data-prototype');

        // count the current form inputs we have (e.g. 2), use that as the new index (e.g. 2)
        var newIndex = collectionHolder.find(':input').length;

        // Replace '__name__' in the prototype's HTML to
        // instead be a number based on how many items we have
        var newForm = prototype.replace(/__name__/g, newIndex);

        // Display the form in the page in an li, before the "Add a tag" link li
        var $newFormLi = $('<li></li>').append(newForm);
        $newLinkLi.before($newFormLi);
    }
</script>

{% endblock %}
