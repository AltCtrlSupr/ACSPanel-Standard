{% extends '::base.html.twig' %}
{% block header_title %} - {% trans %}Domain creation{% endtrans %}{% endblock %}

{% block breadcumb  %}
    {{ parent() }}
    <li>{% trans %}breadcumb.sep{% endtrans %} <a href="{{ path('domain') }}"> {% trans %}domain{% endtrans %}</a></li>
    <li>{% trans %}breadcumb.sep{% endtrans %} {% trans %}domain.title.new{% endtrans %}</li>
{% endblock %}

{% block body %}

<div class="form_box">
    <form action="{{ path('domain_create') }}" method="post" {{ form_enctype(form) }}>
        <span class="label label-important">{{ form_errors(form) }}</span>
        {{ form_row(form.domain) }}
        {{ form_row(form.parent_domain) }}
        <div class="control-group"><div class="controls">{{ form_widget(form.is_httpd_alias) }}{{ form_label(form.is_httpd_alias, null, {'label_attr': {'class':'checkbox inline'}})}}</div></div>
        <div class="control-group"><div class="controls">{{ form_widget(form.is_dns_alias) }}{{ form_label(form.is_dns_alias, null, {'label_attr': {'class':'checkbox inline'}})}}</div></div>
        <div class="control-group"><div class="controls">{{ form_widget(form.is_mail_alias) }}{{ form_label(form.is_mail_alias, null, {'label_attr': {'class':'checkbox inline'}})}}</div></div>
        <div class="control-group"><div class="controls">{{ form_widget(form.add_dns_domain) }}{{ form_label(form.add_dns_domain, null, {'label_attr': {'class':'checkbox inline'}})}}</div></div>
        <p>
            <button class="btn" type="submit">Create</button>
        </p>
        {{ form_rest(form) }}
    </form>
</div>

<ul class="record_actions">
    <li>
        <a href="{{ path('domain') }}">
            Back to the list
        </a>
    </li>
</ul>
{% endblock %}
