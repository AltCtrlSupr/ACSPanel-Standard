{% extends '::base.html.twig' %}
{% block header_title %} - {% trans %}Domain edit{% endtrans %}{% endblock %}

{% block breadcumb  %}
    {{ parent() }}
    <li>{% trans %}breadcumb.sep{% endtrans %} <a href="{{ path('domain') }}"> {% trans %}domain{% endtrans %}</a></li>
    <li>{% trans %}breadcumb.sep{% endtrans %} {% trans %}domain.title.edit{% endtrans %}</li>
{% endblock %}

{% block body %}

<div class="form_box">
    <form action="{{ path('domain_update', { 'id': entity.id }) }}" method="post" {{ form_enctype(edit_form) }}>
        <span class="label label-important">{{ form_errors(edit_form) }}</span>
        {{ form_widget(edit_form) }}
        <p>
            <button class="btn" type="submit">Edit</button>
        </p>
    </form>
</div>

<ul class="record_actions">
    <li>
        <a href="{{ path('domain') }}">
            Back to the list
        </a>
    </li>
    <li>
        <form action="{{ path('domain_delete', { 'id': entity.id }) }}" method="post">
            {{ form_widget(delete_form) }}
            <button class="btn btn-danger" type="submit" onclick="if(!confirm('{% trans %}Are you sure?{% endtrans %}')) { return false; }">{% trans %}Delete{% endtrans %}</button>
        </form>
    </li>
</ul>
{% endblock %}
