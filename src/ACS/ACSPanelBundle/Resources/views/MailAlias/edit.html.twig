{% extends '::base.html.twig' %}
{% block page_title %} - {% trans %}MailAlias edit{% endtrans %}{% endblock %}
{% block body %}

<div class="box box-body">
    <div class="form_box">
        <form action="{{ path('mailalias_update', { 'id': entity.id }) }}" method="post" {{ form_enctype(edit_form) }}>
            <span class="label label-important">{{ form_errors(edit_form) }}</span>
            <p>
                {{ form_label(edit_form.address) }}
                {{ form_widget(edit_form.address) }} @ {{ form_widget(edit_form.mail_domain) }}
                {{ form_label(edit_form.goto) }}
                {{ form_widget(edit_form.goto) }}
                <button class="btn btn-success" type="submit">Edit</button>
                {{ form_widget(edit_form._token) }}
            </p>
        </form>
    </div>
</div>

<ul class="record_actions">
    <li>
        <a href="{{ path('mailalias') }}">
            Back to the list
        </a>
    </li>
    <li>
        <form action="{{ path('mailalias_delete', { 'id': entity.id }) }}" method="post">
            {{ form_widget(delete_form) }}
            <button class="btn btn-danger" type="submit" onclick="if(!confirm('{% trans %}Are you sure?{% endtrans %}')) { return false; }">{% trans %}Delete{% endtrans %}</button>
        </form>
    </li>
</ul>
{% endblock %}
