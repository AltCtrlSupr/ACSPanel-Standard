{% extends '::base.html.twig' %}
{% block page_title %} - {% trans %}Plan edit{% endtrans %}{% endblock %}
{% block body %}

<div class="form_box">
    <form action="{{ path('plans_update', { 'id': entity.id }) }}" method="post" {{ form_enctype(edit_form) }}>
        <span class="label label-important">{{ form_errors(edit_form) }}</span>
        {{ form_widget(edit_form) }}
        <p>
            <button class="btn btn-success" type="submit">Edit</button>
        </p>
    </form>
</div>

<ul class="record_actions">
    <li>
        <a href="{{ path('plans') }}">
            Back to the list
        </a>
    </li>
    <li>
        <form action="{{ path('plans_delete', { 'id': entity.id }) }}" method="post">
            {{ form_widget(delete_form) }}
            <button class="btn btn-danger" type="submit" onclick="if(!confirm('{% trans %}Are you sure?{% endtrans %}')) { return false; }">{% trans %}Delete{% endtrans %}</button>
        </form>
    </li>
</ul>

{%endblock %}
