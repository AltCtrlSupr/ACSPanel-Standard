{% extends '::base.html.twig' %}
{% block page_title %} - {% trans %}MailMailbox edit{% endtrans %}{% endblock %}
{% block body %}

<div class="form_box">
    <form action="{{ path('mailmailbox_update', { 'id': entity.id }) }}" method="post" {{ form_enctype(edit_form) }}>
        <span class="label label-important">{{ form_errors(edit_form) }}</span>
        {{ form_label(edit_form.name) }}
        {{ form_widget(edit_form.name) }}
        {{ form_label(edit_form.username) }}
        {{ form_widget(edit_form.username) }} @ {{ form_widget(edit_form.mail_domain) }}
        <br/>
        {{ form_label(edit_form.password) }}
        {{ form_widget(edit_form.password) }}
        {{ form_rest(edit_form) }}
        <p>
            <button class="btn btn-success" type="submit">Edit</button>
        </p>
    </form>
</div>

<ul class="record_actions">
    <li>
        <a href="{{ path('mailmailbox') }}">
            Back to the list
        </a>
    </li>
    <li>
        <form action="{{ path('mailmailbox_delete', { 'id': entity.id }) }}" method="post">
            {{ form_widget(delete_form) }}
            <button class="btn btn-danger" type="submit" onclick="if(!confirm('{% trans %}Are you sure?{% endtrans %}')) { return false; }">{% trans %}Delete{% endtrans %}</button>
        </form>
    </li>
</ul>
{% endblock %}
